---
import EmptyLayout from '../layouts/empty.astro'
---

<EmptyLayout seo={{ title: 'Home', description: 'pppppppp' }}>
  <div class="ds-hero min-h-screen font-serif">
    <div
      class="absolute flex gap-3 top-4 right-0 px-4 text-xl
            *:size-8 *:text-center *:leading-8 *:rounded
            hover:*:bg-primary
            hover:*:text-white"
    >
    </div>
    <div
      transition:name="bg"
      class="ds-hero-content bg-white/50 ds-card py-8 text-center flex-col text-primary-content"
    >
